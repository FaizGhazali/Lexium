<Window x:Class="Lexium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syntaxEditor="http://schemas.actiprosoftware.com/winfx/xaml/syntaxeditor"
        xmlns:local="clr-namespace:Lexium"
        xmlns:Tagger="clr-namespace:Lexium.WordTagger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--#region Left Side-->
        <Grid Grid.Column="0">
            <syntaxEditor:SyntaxEditor
                x:Name="syntaxEditor"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto"
                WordWrapMode="Word"
                IsCurrentLineHighlightingEnabled="True"
                MouseDoubleClick="syntaxEditor_PreviewMouseDown"
                Foreground="Red"
                >
                

                <syntaxEditor:EditorDocument x:Name="document" xml:space="preserve">
                    
                    
                </syntaxEditor:EditorDocument>

            </syntaxEditor:SyntaxEditor>
        </Grid>
        <!--#endregion-->
        
        <!--#region Right Side-->
        <Grid Grid.Column="1">
            <StackPanel>
                
                <TextBlock x:Name="Text1" Text=""/>
                <TextBlock x:Name="Text2" Text=""/>
                <TextBlock x:Name="Text3" Text=""/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="DefineTextBox"  Grid.Column="0"/>
                    <Button Click="DefineBtn_Clicked" Grid.Column="1" Content="Define"/>
                    

                </Grid>
                <TextBlock x:Name="DefinitionTF" Text="{Binding DefinationValue}"/>
                <Button x:Name="fasfas" Content="1" Click="RefreshLanguage_Click"/>
                <Button x:Name="casfef" Content="2" Click="RefreshLanguage_Click2"/>
            </StackPanel>
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>
